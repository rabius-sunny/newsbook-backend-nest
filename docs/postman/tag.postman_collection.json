{
  "info": {
    "name": "Tag Module",
    "_postman_id": "a8d5e6f7-1234-5678-abcd-ef0123456789",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Public Routes",
      "description": "Public endpoints - No authentication required",
      "item": [
        {
          "name": "Get Tags",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tags?page=1&limit=50&sortBy=name&sortOrder=asc",
              "host": ["{{baseUrl}}"],
              "path": ["tags"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "50" },
                { "key": "sortBy", "value": "name" },
                { "key": "sortOrder", "value": "asc" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Popular Tags",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tags/popular?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["tags", "popular"],
              "query": [{ "key": "limit", "value": "10" }]
            }
          },
          "response": []
        },
        {
          "name": "Get Tag By Slug",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tags/slug/breaking-news",
              "host": ["{{baseUrl}}"],
              "path": ["tags", "slug", "breaking-news"]
            }
          },
          "response": []
        },
        {
          "name": "Get Tag By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tags/1",
              "host": ["{{baseUrl}}"],
              "path": ["tags", "1"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Routes",
      "description": "Admin endpoints - Requires authentication (admin/editor role)",
      "item": [
        {
          "name": "Get Tags (Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/tags?page=1&limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "tags"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "50" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Tag By ID (Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/tags/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "tags", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Create Tag",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Breaking News\",\n  \"slug\": \"breaking-news\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/tags",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "tags"]
            }
          },
          "response": []
        },
        {
          "name": "Update Tag",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Breaking News Updated\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/tags/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "tags", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Toggle Tag Active",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/tags/1/toggle-active",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "tags", "1", "toggle-active"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Tag",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/tags/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "tags", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
