{
  "info": {
    "name": "Language Module",
    "_postman_id": "c1d2e3f4-5678-90ab-cdef-123456789abc",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Public Routes",
      "description": "Public endpoints - No authentication required",
      "item": [
        {
          "name": "Get All Languages",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/languages",
              "host": ["{{baseUrl}}"],
              "path": ["languages"]
            }
          },
          "response": []
        },
        {
          "name": "Get Language By ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/languages/1",
              "host": ["{{baseUrl}}"],
              "path": ["languages", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Get Language By Code",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/languages/code/bn",
              "host": ["{{baseUrl}}"],
              "path": ["languages", "code", "bn"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Routes",
      "description": "Admin endpoints - Requires authentication (admin role only)",
      "item": [
        {
          "name": "Get All Languages (Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/languages",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "languages"]
            }
          },
          "response": []
        },
        {
          "name": "Get Language By ID (Admin)",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/languages/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "languages", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Create Language",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bengali\",\n  \"code\": \"bn\",\n  \"nativeName\": \"বাংলা\",\n  \"isDefault\": false,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/languages",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "languages"]
            }
          },
          "response": []
        },
        {
          "name": "Update Language",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Bengali Updated\",\n  \"isDefault\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/languages/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "languages", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Toggle Language Active",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/languages/1/toggle-active",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "languages", "1", "toggle-active"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Language",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/languages/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "languages", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
