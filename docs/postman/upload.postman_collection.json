{
  "info": {
    "name": "Upload Module",
    "_postman_id": "c7d8e9f0-1234-ef56-789a-bcdef0123456",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Admin Routes",
      "description": "Admin endpoints - Requires authentication (admin/editor roles)",
      "item": [
        {
          "name": "Upload Single File",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/admin/upload",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "upload"]
            }
          },
          "response": []
        },
        {
          "name": "Upload Multiple Files",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": ""
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/admin/upload/multiple",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "upload", "multiple"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Uploads",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/upload?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "upload"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Upload By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/upload/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "upload", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Upload",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/upload/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "upload", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
