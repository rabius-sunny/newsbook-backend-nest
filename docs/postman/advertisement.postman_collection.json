{
  "info": {
    "name": "Advertisement Module",
    "_postman_id": "d2e3f4a5-6789-0abc-def1-23456789abcd",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Public Routes",
      "description": "Public endpoints - No authentication required",
      "item": [
        {
          "name": "Get Advertisements By Position",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/advertisements/position/header",
              "host": ["{{baseUrl}}"],
              "path": ["advertisements", "position", "header"]
            }
          },
          "response": []
        },
        {
          "name": "Track Impression",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/advertisements/1/impression",
              "host": ["{{baseUrl}}"],
              "path": ["advertisements", "1", "impression"]
            }
          },
          "response": []
        },
        {
          "name": "Track Click",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/advertisements/1/click",
              "host": ["{{baseUrl}}"],
              "path": ["advertisements", "1", "click"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Routes",
      "description": "Admin endpoints - Requires authentication (admin/editor roles)",
      "item": [
        {
          "name": "Get All Advertisements",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/advertisements?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "advertisements"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Advertisement By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/advertisements/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "advertisements", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Create Advertisement",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Header Banner\",\n  \"position\": \"header\",\n  \"imageUrl\": \"https://example.com/banner.jpg\",\n  \"targetUrl\": \"https://example.com\",\n  \"startDate\": \"2024-01-01T00:00:00Z\",\n  \"endDate\": \"2024-12-31T23:59:59Z\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/advertisements",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "advertisements"]
            }
          },
          "response": []
        },
        {
          "name": "Update Advertisement",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Header Banner Updated\",\n  \"isActive\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/advertisements/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "advertisements", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Toggle Advertisement Active",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/advertisements/1/toggle-active",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "advertisements", "1", "toggle-active"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Advertisement",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/advertisements/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "advertisements", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
