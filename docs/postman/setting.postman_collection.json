{
  "info": {
    "name": "Setting Module",
    "_postman_id": "3a6b1a73-8ee2-418a-adb3-bcf6ad65b1b1",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api/v1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get All Settings",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/settings?prefix=site.",
          "host": ["{{baseUrl}}"],
          "path": ["settings"],
          "query": [
            {
              "key": "prefix",
              "value": "site."
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Get Settings By Keys",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"keys\": [\"site.name\", \"site.tagline\"]\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/settings/bulk",
          "host": ["{{baseUrl}}"],
          "path": ["settings", "bulk"]
        }
      },
      "response": []
    },
    {
      "name": "Get Setting By Key",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/settings/key/site.name",
          "host": ["{{baseUrl}}"],
          "path": ["settings", "key", "site.name"]
        }
      },
      "response": []
    },
    {
      "name": "Create Setting",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"key\": \"site.name\",\n  \"value\": \"Newsbook\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/settings",
          "host": ["{{baseUrl}}"],
          "path": ["settings"]
        }
      },
      "response": []
    },
    {
      "name": "Upsert Setting",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"key\": \"site.tagline\",\n  \"value\": \"Trusted Bangladeshi News\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/settings/upsert",
          "host": ["{{baseUrl}}"],
          "path": ["settings", "upsert"]
        }
      },
      "response": []
    },
    {
      "name": "Update Setting",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"value\": {\n    \"title\": \"Newsbook\",\n    \"subtitle\": \"Stories that matter\"\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/settings/key/site.branding",
          "host": ["{{baseUrl}}"],
          "path": ["settings", "key", "site.branding"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Setting By Key",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/settings/key/site.name",
          "host": ["{{baseUrl}}"],
          "path": ["settings", "key", "site.name"]
        }
      },
      "response": []
    },
    {
      "name": "Delete Settings By Prefix",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/settings/prefix/site.",
          "host": ["{{baseUrl}}"],
          "path": ["settings", "prefix", "site."]
        }
      },
      "response": []
    }
  ]
