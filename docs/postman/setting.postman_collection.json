{
  "info": {
    "name": "Setting Module",
    "_postman_id": "f4a5b6c7-8901-bcde-f234-56789abcdef0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Public Routes",
      "description": "Public endpoints - No authentication required",
      "item": [
        {
          "name": "Get Setting By Key",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/settings/site_name",
              "host": ["{{baseUrl}}"],
              "path": ["settings", "site_name"]
            }
          },
          "response": []
        },
        {
          "name": "Get Bulk Settings",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"keys\": [\"site_name\", \"site_logo\", \"site_description\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/settings/bulk",
              "host": ["{{baseUrl}}"],
              "path": ["settings", "bulk"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Routes",
      "description": "Admin endpoints - Requires authentication (admin role only)",
      "item": [
        {
          "name": "Get All Settings",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/settings",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "settings"]
            }
          },
          "response": []
        },
        {
          "name": "Get Setting By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/settings/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "settings", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Create Setting",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"key\": \"site_name\",\n  \"value\": \"Grate Bangla News\",\n  \"group\": \"general\",\n  \"type\": \"string\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/settings",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "settings"]
            }
          },
          "response": []
        },
        {
          "name": "Update Setting",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"value\": \"Grate Bangla News Updated\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/settings/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "settings", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Update Bulk Settings",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"settings\": [\n    { \"key\": \"site_name\", \"value\": \"New Site Name\" },\n    { \"key\": \"site_logo\", \"value\": \"https://example.com/logo.png\" }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/settings/bulk",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "settings", "bulk"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Setting",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/settings/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "settings", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
