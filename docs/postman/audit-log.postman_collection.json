{
  "info": {
    "name": "Audit Log Module",
    "_postman_id": "d8e9f0a1-2345-f678-9abc-def012345678",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Admin Routes",
      "description": "Admin endpoints - Requires authentication (admin role only)",
      "item": [
        {
          "name": "Get All Audit Logs",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/audit-logs?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "audit-logs"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Audit Log By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/audit-logs/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "audit-logs", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Get Audit Logs By User",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/audit-logs/user/1?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "audit-logs", "user", "1"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Audit Logs By Action",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/audit-logs/action/CREATE?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "audit-logs", "action", "CREATE"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
