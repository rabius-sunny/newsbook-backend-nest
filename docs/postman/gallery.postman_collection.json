{
  "info": {
    "name": "Gallery Module",
    "_postman_id": "e3f4a5b6-7890-abcd-ef12-3456789abcde",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000/api/v1", "type": "string" },
    { "key": "token", "value": "", "type": "string" }
  ],
  "item": [
    {
      "name": "Admin Routes",
      "description": "Admin endpoints - Requires authentication (admin/editor roles)",
      "item": [
        {
          "name": "Get All Gallery Items",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/gallery?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "gallery"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Gallery Item By ID",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/gallery/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "gallery", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Create Gallery Item",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"News Image\",\n  \"description\": \"Image description\",\n  \"imageUrl\": \"https://example.com/image.jpg\",\n  \"type\": \"image\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/gallery",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "gallery"]
            }
          },
          "response": []
        },
        {
          "name": "Update Gallery Item",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"News Image Updated\",\n  \"isActive\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/gallery/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "gallery", "1"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Gallery Item",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": {
              "raw": "{{baseUrl}}/admin/gallery/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "gallery", "1"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
